{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@types": ["src/types"],
      "@atoms/*": ["src/components/atoms/*"],
      "@pages/*": ["src/components/pages/*"]
    }
  },
  "include": [
    "./src",
    "./server",
    "webpack.config.ts"
  ],
}
